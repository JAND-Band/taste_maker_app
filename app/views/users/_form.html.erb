<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>*<br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>*<br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :dob, 'Birthday' %><br>
    <%= f.date_field :dob %>
  </div>

  <% if !@user.persisted? # if we are creating instead of editing... %>
  <div class="field">
    <%= f.label :password %>*<br>
    <%= f.password_field :password %></br>
    <%= f.label :password_confirmation, 'Confirmation' %>*<br>
    <%= f.password_field :password_confirmation %></br>
  </div>

  <% else %>
    <div class="field">
    <%= f.label :password, 'Please re-enter your Password to make changes'%>*<br>
    <%= f.password_field :password %></br>
    <%= f.label :password_confirmation, 'Password Confirmation' %>*<br>
    <%= f.password_field :password_confirmation %></br>
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<p>Fields with a * are mandatory.</p>
